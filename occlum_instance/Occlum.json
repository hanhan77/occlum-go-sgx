{
    "resource_limits": {
        "user_space_size": "512MB",
        "kernel_space_heap_size": "32MB",
        "kernel_space_stack_size": "1MB",
        "max_num_of_threads": 32
    },
    "process": {
        "default_stack_size": "8MB",
        "default_heap_size": "32MB",
        "default_mmap_size": "128MB"
    },
    "entry_points": [
        "/bin"
    ],
    "env": {
        "default": [
            "OCCLUM=yes"
        ]
    },
    "mount": [
        {
            "target": "/bin",
            "type": "unionfs",
            "options": {
                "layers": [
                    {
                        "target": "/bin",
                        "type": "sefs",
                        "source": "./image/bin"
                    }
                ]
            }
        },
        {
            "target": "/lib",
            "type": "unionfs",
            "options": {
                "layers": [
                    {
                        "target": "/lib",
                        "type": "sefs",
                        "source": "./image/lib"
                    }
                ]
            }
        },
        {
            "target": "/data",
            "type": "unionfs",
            "options": {
                "layers": [
                    {
                        "target": "/data",
                        "type": "encrypted",
                        "source": "image/data"
                    }
                ]
            }
        }
    ],
    "security": {
        "enable_fsgsbase": false
    }
}
